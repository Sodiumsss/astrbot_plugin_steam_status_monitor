{
  "steam_api_key": {
    "description": "Steam Web API Key",
    "type": "string",
    "hint": "请在 https://steamcommunity.com/dev/apikey 获取 "
  },
  "steam_api_base": {
    "description": "Steam Web API Base URL",
    "type": "string",
    "hint": "留空默认 https://api.steampowered.com"
  },
  "steam_store_base": {
    "description": "Steam Store API Base URL",
    "type": "string",
    "hint": "留空默认 https://store.steampowered.com"
  },
  "sgdb_api_key": {
    "description": "SteamGridDB API Key",
    "type": "string",
    "hint": "请在 https://www.steamgriddb.com/profile/preferences/api 获取"
  },
  "sgdb_api_base": {
    "description": "SteamGridDB API Base URL",
    "type": "string",
    "hint": "留空默认 https://www.steamgriddb.com"
  },
  "fixed_poll_interval": {
    "description": "固定轮询间隔（秒）-修改后重启AstrBot生效",
    "type": "int",
    "hint": "为0时使用智能轮询，大于0时所有玩家统一固定间隔轮询（如600秒）",
    "default": 0
  },
  "smart_poll_intervals": {
    "description": "智能轮询各状态间隔（分钟）-修改后重启AstrBot生效",
    "type": "string",
    "hint": "用逗号分隔，依次为[游戏中,12分钟内,3小时内,24小时内,48小时内,超过48小时]，如 1,3,5,10,20,30",
    "default": "1,3,5,10,20,30"
  },
  "retry_times": {
    "description": "Steam API请求重试次数 -修改后重启AstrBot生效",
    "type": "int",
    "hint": "每次请求失败后最多重试几次 ",
    "default": 3
  },
  "detailed_poll_log": {
    "description": "详细轮询日志开关",
    "type": "bool",
    "hint": "控制台输出完整轮询日志（修改后重启AstrBot生效）",
    "default": true
  },
  "enable_proxy": {
    "description": "启用网络代理",
    "type": "bool",
    "hint": "开启后，插件所有网络请求将走设定的代理代理。如：http, https, socks5",
    "default": false
  },
  "proxy_url": {
    "description": "代理链接",
    "type": "string",
    "hint": "填写代理IP和端口，如：http://127.0.0.1:7890 或 socks5://127.0.0.1:7890",
    "default": ""
  }
}
